# Alternative to find
# you can do better
myfind () {
    cd -P -- "$1"
    [ $# -lt 3 ] || [ "$PWD" = "$3" ] || exit 1
    for i in ..?* .[!.]* * ; do
    [ -e "$i" ] && eval "$2 \"\$i\"" # the subshell issue
    [ -d "$i" ] && myfind "$i" "$2" "${PWD%/}/$i"
    done
}

